<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/log-sgn.css">
    <link rel="icon" href="pictures/main-favicon.ico" type="image/x-icon">
    <script src="https://kit.fontawesome.com/3ba76482b4.js" crossorigin="anonymous"></script>
    <title>Log In</title>
</head>
<body style="min-height: 85vh;">
    <form class="sign-in" action="" method="post" onsubmit="">

        <div class="container-fluid" style="max-width: 650px; margin: 100px auto;">
          <h1 class="header">Log In</h1>
            <div class="row">
            <div class="col-xs-6 uni-img">
                <img src="pictures/ionio2.png" alt="Ionio Panepistimio">
            </div>
    
            <div class="col-xs-6 logs">
              <div class="col">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Enter Username" value="" required>
              </div>
              
              <div class="col">
                  <label class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" placeholder="Enter Password" value="" required>
                </div> 
                <div class="invalid-feedback <% if (typeof errorMessage !== 'undefined') { %>d-block<% } %>" >
                  <% if (typeof errorMessage !== 'undefined') { %>
                    <%= errorMessage %>
                  <% } %>
                </div>
                <div class="log-in-button">
                    <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                  </div>
                  
                <div class="col pass-reset">
                    <a style="color: #1E88E5;" href="/pass-reset">Forgot Password?</a>
                  </div>
            </div>
          </div>
          <div class="bot">
            
            <div>
            <p style="font-size: 16px; margin-top: 10px;">Don't have an account? Sign up <strong><a style="color: #000;" href="/sign-up">Here</a></strong>.</p>
          </div>
        </div>
        </div>
      </form>
      <script>
        const errorMessage = "<%= errorMessage %>";
        if (errorMessage) {
          const errorDiv = document.querySelector('.invalid-feedback');
          errorDiv.style.color = "red";
          errorDiv.textContent = errorMessage;
          document.querySelector(".log-in-button").style.paddingTop = "2px";
        }
      </script>
      <%- include("partials/footer") %> 

